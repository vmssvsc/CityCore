<h1 style="text-align: center">PAN CITY PROJECTS</h1>


<form asp-action="Save" enctype="multipart/form-data" method="post">
    @*<input type="hidden" asp-for="save" />*@

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="table-responsive">
        <table class="table table-bordered">
            <tbody>



                <tr>
                    <th scope="row">1</th>
                    <td>Add Photo</td>
                    <td>
                        <input type="file" class="btn btn-default btn-file" multiple="multiple" accept="image/*" />
                        @*<span asp-validation-for="Files" class="text-danger" /><br>*@
                    </td>
                </tr>

                <tr>
                    <th scope="row">2</th>
                    <td>Description</td>
                    <td>
                        <textarea style="height: 253px; width: 542px;">
                        
                    </textarea>
                        @*<span asp-validation-for="@Model.Initiative" class="text-danger" />*@
                    </td>
                </tr>


                <tr>
                    <th scope="row"></th>
                    <td></td>
                    <td>
                        <a class="btn btn-danger pull-right" href="#"><i class="fa fa-edit"></i> Edit</a>
                        <button class="btn btn-primary pull-right" type="submit"><i class="fa fa-floppy-o"></i> Save</button>&nbsp;
                    </td>
                </tr>

            </tbody>
        </table>


    </div>
</form>