@model  admincore.Models.VideoViewModel
@{

    if (Model.Id > 0)
    {

        ViewData["Title"] = "Edit Video";
    }
    else
    {
        ViewData["Title"] = "Add new Video";

    }
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

<style type="text/css">

    .textbox {
        border: 1px solid #e0e0e0;
        padding: 5px 8px;
        color: black;
        font-family: arial, sans-serif;
        box-shadow: none !important;
        width: 35%;
        font-size: 1.5em;
        font-weight: 300;
        height: 40px;
        border-radius: 0;
        -webkit-appearance: none;
    }

    .date {
        border: 1px solid #e0e0e0;
        padding: 5px 8px;
        color: black;
        font-family: arial, sans-serif;
        box-shadow: none !important;
        width: 35%;
        font-size: 1.5em;
        font-weight: 300;
        height: 40px;
        border-radius: 0;
        -webkit-appearance: none;
        text-align: center;
    }
</style>

@{
    if (Model.Id > 0)
    {
        <h1 style="text-align: center"> Edit Video</h1>
    }
    else
    {
        <h1 style="text-align: center">Add new Video</h1>
    }

}

        
<form asp-action="Save" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="@Model.Id" />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="table-responsive">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>Title</td>
                    <td>
                        <input type="text" class="textbox" asp-for="@Model.Title">
                        <span asp-validation-for="@Model.Title" class="text-danger" />
                    </td>
                </tr>

                <tr>
                    <th scope="row">2</th>
                    <td>Description</td>
                    <td>
                        <textarea asp-for="@Model.Description" style="height: 253px; width: 542px;">
                        
                    </textarea>
                        <span asp-validation-for="@Model.Description" class="text-danger" />
                    </td>
                </tr>

                <tr>
                    <th scope="row">3</th>
                    <td>Video Link</td>
                    <td>
                        <input type="text" class="textbox" asp-for="@Model.VideoUrl">
                        <span asp-validation-for="@Model.VideoUrl" class="text-danger" />
                    </td>
                </tr>

                
             
                <tr>
                    <th scope="row"></th>
                    <td></td>
                    <td>

                        <a class="btn btn-danger pull-right" href="/Video"><i class="fa fa-times"></i> Cancel</a>
                        <button class="btn btn-primary pull-right" type="submit"><i class="fa fa-floppy-o"></i> Save</button>
                    </td>
                </tr>

            </tbody>
        </table>


    </div>
</form>
@section EndScripts{
    @*<script type="text/javascript" src="~/js/Video/AddEdit.js"></script>*@
}
