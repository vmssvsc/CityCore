                    </td>
                </tr>


                <tr>
                    <th scope="row">5</th>
                    <td>Boundary East</td>
                    <td>
                        <input type="text" class="textbox">
                        @*<span asp-validation-for="Title" class="text-danger" />*@
                    </td>
                </tr>
                <tr>
                    <th scope="row">6</th>
                    <td>Boundary West</td>
                    <td>
                        <input type="text" class="textbox">
