                    </td>
                </tr>

                <tr>
                    <th scope="row">7</th>
                    <td>Boundary North</td>
                    <td>
                        <input type="text" class="textbox">
                        @*<span asp-validation-for="Title" class="text-danger" />*@
                    </td>
                </tr>

                <tr>
                    <th scope="row">8</th>
                    <td>Boundary South</td>
                    <td>
                        <input type="text" class="textbox">
                        @*<span asp-validation-for="Title" class="text-danger" />*@
